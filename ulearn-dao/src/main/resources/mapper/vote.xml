<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ulearn.dao.VoteDao">

    <insert id="voteQuestion" parameterType="com.ulearn.dao.domain.VoteQuestion">
        INSERT INTO u_question_vote(`userId`,
                                    `questionId`,
                                    `status`,
                                    `createTime`)
        VALUES (#{userId},
                #{questionId},
                #{status},
                #{createTime})
    </insert>

    <select id="getVoteQuestionByUserIdAndQuestionId" resultType="com.ulearn.dao.domain.VoteQuestion">
        SELECT * FROM u_question_vote WHERE userId = #{userId} AND questionId = #{questionId}
    </select>

    <delete id="deleteVoteQuestionByUserIdAndQuestionId">
        DELETE FROM u_question_vote WHERE userId = #{userId} AND questionId = #{questionId}
    </delete>

    <insert id="voteAnswer" parameterType="com.ulearn.dao.domain.VoteAnswer">
        INSERT INTO u_answer_vote(`userId`,
                                  `answerId`,
                                  `status`,
                                  `createTime`)
        VALUES (#{userId},
                #{answerId},
                #{status},
                #{createTime})
    </insert>

    <select id="getVoteAnswerByUserIdAndAnswerId" resultType="com.ulearn.dao.domain.VoteAnswer">
        SELECT * FROM u_answer_vote WHERE userId = #{userId} AND answerId = #{answerId}
    </select>

    <delete id="deleteVoteAnswerByUserIdAndAnswerId">
        DELETE FROM u_answer_vote WHERE userId = #{userId} AND answerId = #{answerId}
    </delete>
</mapper>