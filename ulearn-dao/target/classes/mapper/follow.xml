<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ulearn.dao.FollowDao">

    <insert id="followQuestion" parameterType="com.ulearn.dao.domain.FollowQuestion">
        INSERT INTO u_follow_question VALUES(#{userId}, #{questionId}, #{createTime})
    </insert>

    <select id="getFollowQuestionByUserIdAndQuestionId" resultType="com.ulearn.dao.domain.FollowQuestion">
        SELECT * FROM u_follow_question WHERE `userId` = #{userId} AND `questionId` = #{questionId}
    </select>

    <delete id="deleteFollowQuestionByUserIdAndQuestionId">
        DELETE FROM u_follow_question WHERE `userId` = #{userId} AND `questionId` = #{questionId}
    </delete>

    <insert id="followAnswer" parameterType="com.ulearn.dao.domain.FollowAnswer">
        INSERT INTO u_follow_answer VALUES(#{userId}, #{answerId}, #{createTime})
    </insert>

    <select id="getFollowAnswerByUserIdAndAnswerId" resultType="com.ulearn.dao.domain.FollowAnswer">
        SELECT * FROM u_follow_answer WHERE `userId` = #{userId} AND `answerId` = #{answerId}
    </select>

    <delete id="deleteFollowAnswerByUserIdAndAnswerId">
        DELETE FROM u_follow_answer WHERE `userId` = #{userId} AND `answerId` = #{answerId}
    </delete>

    <select id="getQuestionFollowerByQuestionId" resultType="java.lang.Long">
        SELECT
            userId
        FROM
            u_follow_question
        WHERE
            questionId = #{questionId}
    </select>

    <select id="getFollowedQuestionAnswerByAnswerId" resultType="java.util.HashMap">
        SELECT
               q.id AS questionId,
               q.title AS questionTitle,
               a.id AS answerId,
               a.content AS answerContent,
               a.createTime AS answerCreateTime
        FROM
            u_answer a
                JOIN
            u_question q
            ON a.questionId = q.id
        WHERE
            a.id = #{answerId}
    </select>
</mapper>