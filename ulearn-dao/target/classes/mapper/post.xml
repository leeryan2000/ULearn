<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ulearn.dao.PostDao">
    <insert id="addQuestion" parameterType="com.ulearn.dao.domain.Question">
        INSERT INTO u_question(
                               `u_id`,
                               `title`,
                               `content`,
                               `create_time`
                           )
        VALUES(
               #{userId},
               #{title},
               #{content},
               #{createTime}
               )
    </insert>

    <insert id="addAnswer" parameterType="com.ulearn.dao.domain.Answer">
        INSERT INTO u_answer(
            `u_id`,
            `q_id`,
            `content`,
            `create_time`
        )
        VALUES(
                  #{userId},
                  #{questionId},
                  #{content},
                  #{createTime}
              )
    </insert>
</mapper>